<% provide(:title, "Log In")%>

<div class="jumbotron center half-wide">
  <h3 class="bottom-space">Go ahead and log in</h3>

  <%= form_for(:session, url: login_path) do |f| %>
    <div class="login-row">
      <div class="col-md-6">
        <p><%= f.label :username, "Username: " %></p>
        <div class="bottom-space"><%= f.text_field :username %></div>
      </div>
      <div class="col-md-6">
        <p><%= f.label :password, "Password: " %></p>
        <div class="bottom-space"><%= f.password_field :password %> </div>
      </div>
    </div>

    <button class="bottom-space"><%= f.submit "Log In", class:"btn" %></button>

    <div>
      <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <span>Keep me Logged In </span>
    </div>
    <% end %>


 </div>

<% end %>